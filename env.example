# ===========================================
# Configuración de Base de Datos
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=nestjs_auth

# ===========================================
# Configuración JWT
# ===========================================
JWT_SECRET=tu-jwt-secret-super-seguro-y-muy-largo
JWT_REFRESH_SECRET=tu-jwt-refresh-secret-super-seguro-y-muy-largo
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Configuración de Email
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=tu-email@gmail.com
MAIL_PASS=tu-password-de-aplicacion
MAIL_FROM=tu-email@gmail.com

# ===========================================
# Configuración de la Aplicación
# ===========================================
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000
API_VERSION=1
APP_NAME=TEST

# ===========================================
# Configuración de Docker (PostgreSQL)
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=nestjs_auth

# ===========================================
# Configuración de Rate Limiting
# ===========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ===========================================
# Configuración de Swagger
# ===========================================
SWAGGER_TITLE=NestJS Auth Boilerplate API
SWAGGER_DESCRIPTION=API de autenticación y gestión de usuarios
SWAGGER_VERSION=1.0
SWAGGER_TAG=auth 

# ===========================================
# Configuración del Frontend
# ===========================================
FRONTEND_URL=http://localhost:4200
FRONTEND_CONFIRM_MAIL_PATH=/confirm-email
FRONTEND_RESET_PASSWORD_PATH=/reset-password